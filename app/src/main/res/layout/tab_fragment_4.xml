<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_fragment_4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ash.cleantind_dgu_cse_se.tab4.TabFragment4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="환경 설정"
            android:textSize="30dp"
            android:padding="5dp"
            android:gravity="top|center"
            />
        <!-- 개인정보변경 관련-->

        <Button
            android:id="@+id/logout_Btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="left"
            style="?android:attr/borderlessButtonStyle"
            android:text="로그아웃"
            android:textColor="#111111"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/change_info_Btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="left"
            style="?android:attr/borderlessButtonStyle"
            android:text="개인정보 변경"
            android:textColor="#111111"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/update_mypost_Btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="left"
            style="?android:attr/borderlessButtonStyle"
            android:text="내가 쓴 글 수정"
            android:textColor="#111111"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/withdrawl_Btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="left"
            style="?android:attr/borderlessButtonStyle"
            android:text="회원 탈퇴"
            android:textColor="#111111"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/information_Btn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="left"
            style="?android:attr/borderlessButtonStyle"
            android:text="어플리케이션 정보"
            android:textColor="#111111"
            android:textSize="20sp"
            />

    </LinearLayout>


</RelativeLayout>